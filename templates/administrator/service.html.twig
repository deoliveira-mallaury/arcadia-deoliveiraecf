{# templates/administrator/service.html.twig #}
<div class="container-fluid row align-items-center">
	<turbo-frame id="show_services" turbo-visit-control="reload">
		{{ include('services/index.html.twig', { services: services }) }}
	</turbo-frame>
	<div class="container-fluid new_service row align-items-center d-flex justify-content-center">
		<form id="new-service-form" action="{{ path('administrator_service') }}" method="post" enctype="multipart/form-data" class="row align-items-center col-6 border border-dark">
			{{ form_start(form, {'attr': {'class': ''}}) }}
			{{ form_widget(form, {'attr': {'class': ''}}) }}
			{% if errorMessage %}
				<div id="error-message" style="color: red;">{{ errorMessage }}</div>
			{% endif %}
			<button id="add_user" class="btn">Enregistrer</button>
			{{ form_end(form) }}
		</form>
	</div>
</div>
