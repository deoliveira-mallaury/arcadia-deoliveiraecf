{# templates/administrator/habitat.html.twig #}

<div
	class="container-fluid row align-items-center">
	{# <turbo-frame id="show_animal" turbo-visit-control="reload"> #}
	{{ include('animal/index.html.twig', { animals: animals }) }}
	{# </turbo-frame> #}
	<div class="container-fluid new_animal row align-items-center d-flex justify-content-center ">
		<form id="new-animal-form" action="{{ path('administrator_animal') }}" method="post" enctype="multipart/form-data" class="row align-items-center col-6 border border-dark">
			{{ form_start(form, {'attr': {'class': ''}}) }}
			{{ form_widget(form, {'attr': {'class': ''}}) }}
			{% if errorMessage %}
				<div id="error-message" style="color: red;">{{ errorMessage }}</div>
			{% endif %}
			<button id="add_animal" class="btn">Enregistrer</button>
			{{ form_end(form) }}
		</form>
	</div>

</div>
