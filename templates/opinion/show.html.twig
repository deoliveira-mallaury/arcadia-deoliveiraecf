{% extends 'base.html.twig' %}

{% block title %}Opinion{% endblock %}

{% block body %}
    <h1>Opinion</h1>
	<turbo-frame id="show_opinion">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ opinion.id }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ opinion.pseudo }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ opinion.comment }}</td>
            </tr>
            <tr>
                <th>IsVisible</th>
                <td>{{ opinion.isVisible ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_opinion_index') }}">back to list</a>

    <a href="{{ path('app_opinion_edit', {'id': opinion.id}) }}">edit</a>

    {{ include('opinion/_delete_form.html.twig') }}
    	</turbo-frame>

{% endblock %}
