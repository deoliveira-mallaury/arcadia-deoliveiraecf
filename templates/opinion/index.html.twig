{% extends 'base.html.twig' %}

{% block title %}Opinion index
{% endblock %}

{% block body %}
	<h1>Opinion index</h1>
	<turbo-frame id="index_opinion">

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Pseudo</th>
					<th>Comment</th>
					<th>IsVisible</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for opinion in opinions %}
					<tr>
						<td>{{ opinion.id }}</td>
						<td>{{ opinion.pseudo }}</td>
						<td>{{ opinion.comment }}</td>
						<td>{{ opinion.isVisible ? 'Yes' : 'No' }}</td>
						<td>
							<a href="{{ path('app_opinion_show', {'id': opinion.id}) }}">show</a>
							<a href="{{ path('app_opinion_edit', {'id': opinion.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_opinion_new') }}">Create new</a>
	</turbo-frame>

{% endblock %}
