{% extends 'base.html.twig' %}

{% block title %}Hello HabitatsController!
{% endblock %}

{% block body %}
	<div class="container-fluid habitat">
		<div class="row">
			<div class="row col-md-3 col-lg-2 mx-auto justify-content-sm-around">
				<h1 class="text-center">Nos Habitats</h1>
				{% for habitat in habitats %}
			<div class="card m-3 col-5 col-md-3">
						<div class="card-body p-1">
							{% for image in habitat.images %}
								{% set base64Image = image.getDataImageBase64() %}
								{% if base64Image %}
									<img src="data:image/jpeg;base64,{{ base64Image }}" id="habitat-{{habitat.name}}"  class="habitat-button img-habitat card-img-top w-100 mx-auto" alt="..."/>
								{% else %}
									<p>Image non disponible</p>
								{% endif %}
							{% endfor %}
							<h5 class="card-title text-center mt-2">{{ habitat.name }}</h5>
						</div>
					</div>
				{% endfor %}
			</div>
			<div class="row col">
				{{ include('habitat/_content.html.twig') }}
			</div>
		</div>
	</div>
{% endblock %}
