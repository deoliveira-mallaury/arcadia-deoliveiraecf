{% extends 'base.html.twig' %}

{% block title %}Nos Animaux
{% endblock %}
{% block body %}
	<div class="container-fluid">
		<h1 class="text-center">Nos Animaux</h1>
		{% for habitat in habitats %}
			<div
				id="displHabitat-{{ habitat.id }}" class="card-animal-container">
				<!-- Affichage des cartes côte à côte en vue lg -->
				<div class="row d-none d-lg-flex m-3 justify-content-center">
					{% for animal in habitat.animals %}
						<div class="col-12 col-md-6 col-lg-4 mb-4 m-4 card-animal">
							{{ include('animal/animal_card.html.twig', { animal: animal }) }}
						</div>
					{% endfor %}
				</div>

				<!-- Carrousel pour vue md -->
				<div id="carousel-{{ habitat.id }}" class="carousel carousel-dark slide d-md-block d-lg-none" data-bs-ride="carousel">
					<div class="carousel-inner">
						{% for animal in habitat.animals %}
							<div class="carousel-item {% if loop.first %}active{% endif %}" >
								<div class="d-flex justify-content-center">
									<div class="col-12 col-md-8 col-lg-6 mb-4 card-animal">
										{{ include('animal/animal_card.html.twig', { animal: animal }) }}
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
					<button class="carousel-control-prev" type="button" data-bs-target="#carousel-{{ habitat.id }}" data-bs-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Previous</span>
					</button>
					<button class="carousel-control-next" type="button" data-bs-target="#carousel-{{ habitat.id }}" data-bs-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Next</span>
					</button>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
